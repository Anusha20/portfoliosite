extends layout

block content
	h1 Register
	p Please Register using form below
	ul.errors
		if errors
			each error,i in errors
				li.alert.alert-danger #{error.msg}
	form(method='post',action='/users/register',endtype='multipart/form-data')
		.form-group
			lable Name
			input.form-control(name='name',type='text',placeholder='Enter Name')
		.form-group
			lable Email
			input.form-control(name='email',type='text',placeholder='Enter Email')
		.form-group
			lable Username
			input.form-control(name='username',type='text',placeholder='Enter UserName')
		.form-group
			lable Password
			input.form-control(name='password',type='password',placeholder='Enter Password')
		.form-group
			lable Confirm Password
			input.form-control(name='password2',type='password',placeholder='Enter Confirm Password')
		.form-group
			lable Profile Image
			input.form-control(name='profileImage',type='file')
		input.btn.btn-default(name='submit',type='submit',value='Register')
